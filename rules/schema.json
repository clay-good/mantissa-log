{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mantissa-log.org/schemas/detection-rule.json",
  "title": "Mantissa Log Detection Rule",
  "description": "Schema for Mantissa Log detection rules",
  "type": "object",
  "required": ["id", "name", "description", "query", "schedule", "severity"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for the rule (lowercase alphanumeric and hyphens only)"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Human-readable name for the rule"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "description": "Detailed description of what the rule detects"
    },
    "query": {
      "type": "string",
      "minLength": 1,
      "description": "SQL query to execute against the data lake (Athena-compatible)"
    },
    "schedule": {
      "type": "string",
      "pattern": "^(\\d+m|\\d+h|\\d+d|cron\\(.+\\))$",
      "description": "Execution schedule: '5m', '1h', '1d', or 'cron(0 0 * * ? *)'"
    },
    "severity": {
      "type": "string",
      "enum": ["critical", "high", "medium", "low", "info"],
      "description": "Severity level of alerts generated by this rule"
    },
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Whether the rule is active"
    },
    "threshold": {
      "type": "object",
      "properties": {
        "field": {
          "type": "string",
          "description": "Field to apply threshold to (e.g., 'count', 'total_bytes')"
        },
        "operator": {
          "type": "string",
          "enum": [">", ">=", "<", "<=", "==", "!="],
          "description": "Comparison operator"
        },
        "value": {
          "type": ["number", "string"],
          "description": "Threshold value to compare against"
        }
      },
      "required": ["field", "operator", "value"],
      "description": "Threshold configuration for the rule"
    },
    "lookback_window": {
      "type": "string",
      "pattern": "^\\d+[mhd]$",
      "default": "1h",
      "description": "Time window to query historical data: '5m', '1h', '24h', etc."
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "description": "Tags for categorizing and filtering rules"
    },
    "references": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "description": "URLs to relevant documentation, advisories, or blog posts"
    },
    "mitre_attack": {
      "type": "object",
      "properties": {
        "tactics": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "reconnaissance",
              "resource-development",
              "initial-access",
              "execution",
              "persistence",
              "privilege-escalation",
              "defense-evasion",
              "credential-access",
              "discovery",
              "lateral-movement",
              "collection",
              "command-and-control",
              "exfiltration",
              "impact"
            ]
          },
          "description": "MITRE ATT&CK tactics"
        },
        "techniques": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^T\\d{4}(\\.\\d{3})?$"
          },
          "description": "MITRE ATT&CK technique IDs (e.g., T1078, T1078.004)"
        }
      },
      "description": "MITRE ATT&CK framework mapping"
    },
    "alert_template": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "Alert title template with placeholders like {{field_name}}"
        },
        "description": {
          "type": "string",
          "description": "Alert description template with placeholders"
        },
        "include_fields": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Query result fields to include in alert"
        }
      },
      "description": "Template for generated alerts"
    },
    "alert_destinations": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["slack", "pagerduty", "email", "jira", "teams", "webhook", "sns"]
      },
      "uniqueItems": true,
      "description": "Alert routing destinations (overrides global defaults)"
    },
    "suppression": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable alert suppression/deduplication"
        },
        "fields": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "description": "Fields to create suppression key (e.g., ['source_ip', 'user'])"
        },
        "duration": {
          "type": "string",
          "pattern": "^\\d+[mhd]$",
          "description": "Suppression window duration (e.g., '1h', '24h')"
        }
      },
      "required": ["enabled"],
      "description": "Alert suppression configuration to prevent duplicate alerts"
    },
    "false_positives": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Known false positive scenarios"
    },
    "author": {
      "type": "string",
      "description": "Rule author or team name"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Rule version in semver format (e.g., 1.0.0)"
    },
    "created_date": {
      "type": "string",
      "format": "date",
      "description": "Date the rule was created (YYYY-MM-DD)"
    },
    "modified_date": {
      "type": "string",
      "format": "date",
      "description": "Date the rule was last modified (YYYY-MM-DD)"
    }
  },
  "additionalProperties": false
}
