# Example Terraform backend configuration
# Copy this file to backend.tf and customize for your environment

terraform {
  backend "s3" {
    # S3 bucket for storing Terraform state
    bucket = "your-terraform-state-bucket"

    # State file path within the bucket
    key = "mantissa-log/dev/terraform.tfstate"

    # AWS region where the state bucket is located
    region = "us-east-1"

    # Enable encryption for state file
    encrypt = true

    # DynamoDB table for state locking
    dynamodb_table = "terraform-state-locks"

    # Optional: KMS key for state encryption
    # kms_key_id = "arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012"
  }
}

